{
  "name": "@adi-utils/http-example",
  "version": "1.0.0",
  "description": "Example project structure for @adi-utils/http",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "bun run packages/backend/index.ts",
    "dev:client": "bun run packages/client/index.ts",
    "build": "bun run build:contracts && bun run build:server && bun run build:client",
    "build:contracts": "tsc -p packages/api-contracts/tsconfig.json",
    "build:server": "tsc -p packages/backend/tsconfig.json",
    "build:client": "tsc -p packages/client/tsconfig.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4"
  }
}
